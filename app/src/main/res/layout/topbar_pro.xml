<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"

    android:orientation="vertical"

     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#F5891F"

        android:weightSum="5">
        <!--android:background="#326288"-->



    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:paddingRight="3dp"
        android:src="@drawable/menuicon" />

    <ImageView
        android:id="@+id/sdse_logo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="3dp"
        android:src="@drawable/header_logo_pro" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.3"
        android:gravity="center"
    android:paddingLeft="3dp"
            android:paddingRight="3dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dse_marketstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Market Status"

            android:textColor="@android:color/white"
            android:textColorLink="@android:color/white"
            android:textSize="12dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/dse_home_refresh"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_gravity="right|center"
        android:layout_weight=".2"
        android:src="@drawable/reload" />


        </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#F58614" />

</LinearLayout>
