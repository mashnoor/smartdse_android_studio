<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:orientation="vertical" >

    <include
        android:id="@+id/news_header"

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        layout="@layout/topbar" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:weightSum="2"

        android:layout_above="@id/down_panel_rellayout"
        android:layout_below="@id/news_header"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/buy_layout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:weightSum="2"
               android:background="#151515">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Buy Price"
                    android:textColor="#00CCCF"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:gravity="left"
                    android:id="@+id/textView6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Buy Volume"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="4dp"
                    android:id="@+id/textView7"
                    android:textColor="#00CCCF" />
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buy_list" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#00CCCF" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sell_layout" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:padding="7dp"
                android:background="#151515" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Sell Price"
                    android:textColor="#00CCCF"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:id="@+id/textView8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="4dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Sell Volume"
                    android:id="@+id/textView9"
                    android:textColor="#00CCCF" />
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sell_list" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/down_panel_rellayout"

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        layout="@layout/downpanel" />


</RelativeLayout>